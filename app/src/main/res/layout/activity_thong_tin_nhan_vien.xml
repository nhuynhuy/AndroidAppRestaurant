<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#28047A"
    tools:context=".thongTinNhanVien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/backNV"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:layout_marginRight="150dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#28047A"
            android:drawableLeft="@drawable/arrowleft"
            android:text="Thông Tin Nhân Viên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:id="@+id/addNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"></ImageView>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewMain"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>