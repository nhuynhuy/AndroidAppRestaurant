<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".forgotpassword">
    <TextView
        android:id="@+id/tvForgotPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/arrowleft"
        android:drawablePadding="10dp"
        android:text="Quên Mật khẩu"
        android:textColor="#28047A"
        android:textSize="30dp"
        ></TextView>

    <ImageView
        android:id="@+id/addImageUser"
        android:layout_width="274dp"
        android:layout_height="196dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/hinh1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Chọn Phương Thức Liên Hệ :"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#28047A"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="wrap_content"
            android:id="@+id/radioGroupp"
            android:padding="15dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioSDT"
                android:layout_marginBottom="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>

            <RadioButton
                android:id="@+id/radioEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"></RadioButton>
        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="287dp"
                android:background="@drawable/cuttom_editer"
                android:padding="15dp"
                android:layout_height="70dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/sms"
                    android:scaleType="fitXY"
                    android:layout_height="40dp"></ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#28047A"
                        android:textSize="16dp"
                        android:text="Tới SMS:"></TextView>
                    <TextView
                        android:id="@+id/tvSDTForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#28047A"
                        android:text=""></TextView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="277dp"
                android:background="@drawable/cuttom_editer"
                android:padding="15dp"
                android:layout_height="80dp"
                android:layout_marginBottom="70dp">

                <ImageView
                    android:src="@drawable/mail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"></ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#28047A"
                        android:textSize="16dp"
                        android:text="Tới Email:"></TextView>
                    <TextView
                        android:id="@+id/tvEmailForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text=""
                        android:textColor="#28047A"
                        ></TextView>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/buttonContinueForgotPassword"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/cutomedittext"
        android:text="Tiếp Tục"
        />
</LinearLayout>