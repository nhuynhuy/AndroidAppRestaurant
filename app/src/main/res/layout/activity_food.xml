<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/AliceBlue"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--tools:context=".ViewFoods"-->


    <!--recycler view for displaying our foods-->


    <ImageView
        android:id="@+id/imBackround"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:alpha="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/mon_an_backround" />
    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tvMenuBackround"
        android:text="Main course"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="70sp"
        android:fontFamily="@font/uvnbachdang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="48dp"
        android:id="@+id/tvMenuBackround2"
        android:text="Main course"
        style="@style/TextViewWithBorder"
        android:layout_gravity="center_horizontal"
        android:textSize="70sp"
        android:fontFamily="@font/uvnbachdang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/white"
        app:maxImageSize="30dp"
        android:contentDescription="add new item"
        android:foregroundGravity="center"
        android:src="@drawable/baseline_add_24"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</FrameLayout>